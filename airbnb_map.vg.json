{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 400,
    "height": 400,
    "title": {
        "text": "Price Per Night of Entire Places on Airbnb on 07 Dec 2018",
        "fontSize": "14",
        "font": "Montserrat"
    },
    "projection": {
        "type": "mercator"
    },
    "layer": [{
            "data": {
                "url": "data/neighbourhoods.geojson",
                "format": {
                    "property": "features"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "lightgray",
                "stroke": "white"
            }
        },
        {
            "data": {
                "url": "data/listings_summary_cleansed.csv"
            },
            "transform": [{
                "filter": "datum.room_type == 'Entire home/apt'"
            }],
            "mark": {
                "type": "point",
                "filled": true,
                "tooltip": true
            },
            "encoding": {
                "longitude": {
                    "field": "longitude",
                    "type": "quantitative"
                },
                "latitude": {
                    "field": "latitude",
                    "type": "quantitative"
                },
                "color": {
                    "field": "price",
                    "type": "quantitative",
                    "title": "Price per night",
                    "scale": {
                        "scheme": "blues",
                        "domain": [0, 100, 200, 300, 400, 500, 600, 700, 800, 900, 1000]
                    }
                },
                "tooltip": [{
                        "field": "price",
                        "type": "quantitative",
                        "title": "Price per night",
                        "format": "$.2f"
                    },
                    {
                        "field": "room_type",
                        "type": "nominal",
                        "title": "Room type"
                    },
                    {
                        "field": "neighbourhood",
                        "type": "nominal",
                        "title": "Neighbourhood"
                    }
                ]
            }
        }
    ]
}